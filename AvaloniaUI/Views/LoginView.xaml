<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AvaloniaUI.Views.LoginView">

    <StackPanel>
      <TextBlock Name="loginHead" Text="Login VvSdH-Tool" HorizontalAlignment="Center" FontSize="20" Margin="10"/>
      <TextBlock Name="text" Text="{Binding Info}" HorizontalAlignment="Center" Margin="10"/>
      <TextBox Name="username" Text="{Binding Username}" Margin="10" MaxWidth="250"/>
      <TextBox Name="password" Text="{Binding Password}" Margin="10" PasswordChar="*" MaxWidth="250"/>
      <Button Name="login" Content="Login" Width="100" HorizontalAlignment="Center" Margin="10"/>
    </StackPanel>
</UserControl>
